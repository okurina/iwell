<%# app/assets/stylesheets/users/login.css %>
<div class = "login-pic">

  <header class='login-headers'>
  </header>

  <%= form_with  model: @user, url: user_registration_path, class: 'login-main', local: true do |f| %>
    <div class='form-wrap'>
      <div class='form-header'>
        <div class='login-header'>
          <%= link_to image_tag("logo.png", size: '250x130', class: "login-logo") %>
        </div>
        <div class='form-header-text'>
          新規登録
        </div>
      </div>

      <%= render 'shared/error_messages', model: f.object %>

      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">名前</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_area :user_name, class:"input-default", placeholder:"例) 田中太郎", maxlength:"40", autofocus: true %>
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">メールアドレス</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.email_field :email, class:"input-default", placeholder:"例) mail@iwell.co.jp", autocomplete: "email" %>
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">パスワード</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.password_field :password, class:"input-default", placeholder:"6文字以上の半角英数字", autocomplete: "new-password" %>
        <p class='info-text'>※英字と数字を両方含めてください</p>
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">パスワード(確認)</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.password_field :password_confirmation, class:"input-default", placeholder:"同じパスワードを入力して下さい",  autocomplete: "new-password" %>
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">所属</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_area :department, class:"input-default", placeholder:"例) 総務部" %>
     </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">ログインID(社員番号)</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_area :login_num, class:"input-default", placeholder:"例) 00012345", maxlength:"8" %>
        <p class='info-text'>※8桁で入力してください</p>
      </div>

      <div class='login-btn'>
        <%= f.submit "登録", class:"login--btn" %>
        <%= link_to "ログイン", new_user_session_path, class: "new-user-btn" %>
      </div>
    </div>
  <% end %>

  <%= render "shared/second-footer"%>

</div>
