<div class='form-wrap'>
  <div class='form-header'>
    <%= link_to image_tag("logo.png", size: '200x100', class: :logo), root_path %>
    <div class="login">
      <h2>Log in</h2>
      <%= link_to "新規登録", new_user_registration_path, class: "post" %>
    </div>
  </div>
</div>

<%= form_with  model: @user, url: user_session_path, class: 'registration-main', local: true do |f| %>
  <div class='login-flash-message'>
    <%= flash[:notice] %>
    <%= flash[:alert] %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">メールアドレス</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.email_field :email, class:"input-default", id:"email", autofocus: true, autocomplete: "email" %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :password, class:"input-default", id:"password",  autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class='login-btn'>
    <%= f.submit "ログイン" ,class:"login-red-btn" %>
  </div>
<% end %>


<%= render "devise/shared/links" %>

<%= render "shared/footer"%>
