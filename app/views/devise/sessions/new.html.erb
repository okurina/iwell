<%# app/assets/stylesheets/users/login.css %>
<div class = "login-pic">

  <header class='login-headers'>
  </header>

  <%= form_with  model: @user, url: user_session_path, class: 'login-main', local: true do |f| %>
    <div class='form-wrap'>
      <div class='form-header'>
        <div class='login-header'>
          <%= link_to image_tag("logo.png", size: '250x130', class: "login-logo") %>
        </div>
        <div class='form-header-text'>
          ログイン
        </div>
      </div>

      <div class='login-flash-message'>
        <%= flash[:notice] %>
        <%= flash[:alert] %>
      </div>

      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">メールアドレス</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.email_field :email, class:"input-default", id:"email", autofocus: true, autocomplete: "email" %>
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">パスワード</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.password_field :password, class:"input-default", id:"password",  autocomplete: "current-password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="check-field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class='login-btn'>
        <%= f.submit "ログイン" ,class:"login--btn" %>
        <% if User.count.zero? %>
          <%= link_to "新規登録", new_user_registration_path, class: "new-user-btn" %>
        <% end %>
      </div>
    </div>
  <% end %>

  <%= render "shared/second-footer"%>

</div>
