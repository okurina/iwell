<%# 在庫一覧 %>
<div class="contents row">
  <% @items.each do |item| %>
    <div class="content_post" style="background-image: url(<%= item.image %>);">
      <p><%= item.text %></p>
      <span class="name">
        <%= tweet.name %>
      </span>
    </div>
  <% end %>
</div>

<div class='item-contents'>
    <div class="subtitle" >
      在庫一覧
    </div>
    <ul class='item-lists'>
      <% @items.each do |item| %>
        <li class='list'>
          <%= link_to item_path(item) do %>
            <div class='item-img-content'>
                <%= image_tag(item.image.variant(resize: '500x500'), class: "item-img") %>
            </div>
            <div class='item-info'>
              <h3 class='item-name'>
                <%= item.item_name %>
              </h3>
              <div class='item-price'>
                <span><%= item.price.to_fs(:delimited) %>円<br><%= item.delivery_charge.name %></span>
                <div class='star-btn'>
                  <%= image_tag "star.png", class:"star-icon" %>
                  <span class='star-count'>0</span>                  
                </div>
              </div>
            </div>
          <% end %>
        </li>
      <% end %>