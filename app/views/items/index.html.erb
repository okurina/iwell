<%# 在庫一覧 %>
<div class='item-contents'>
    <div class="subtitle" >
      在庫一覧
    </div>
    <ul class='item-lists'>
      <% @items.each do |item| %>
        <li class='list'>
          <%= link_to item_path(item) do %>
            <div class='item-img-content'>
              <%= image_tag(item.image.variant(resize: '100x100'), class: "item-img") %>
            </div>
            <div class='item-info'>
              <h3 class='item-name'>
                <%= item.item_name %>
              </h3>
            </div>
          <% end %>
        </li>
      <% end %>
    </ul>
</div>