<div class="items-sell-contents">
  <header class="items-sell-header">
    <h2>商品情報</h2>
  </header>
  <div class="items-sell-main">
    <h2 class="items-sell-title">商品の情報を入力</h2>
    <%= form_with model: @item, url: items_path, local: true do |f| %>

    <%= render 'shared/error_messages', model: f.object %>

    <%# 商品名と商品説明 %>
    <div class="new-items">
      <div class="weight-bold-text">
        商品名
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_area :item_name, class:"items-text", id:"item-name", placeholder:"商品名", maxlength:"40" %>
    </div>

    <%# 商品画像 %>
    <div class="img-upload">
      <div class="weight-bold-text">
        商品画像
        <span class="indispensable">必須</span>
      </div>
      <div class="click-upload">
        <p>
          クリックしてファイルをアップロード
        </p>
        <%= f.file_field :image, id:"item-image" %>
      </div>
    </div>
    <%# /商品画像 %>

    <%# 商品の詳細 %>
    <div class="items-detail">
      <div class="form">
        <div class="weight-bold-text">
          カテゴリー
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:category_id, Category.all, :id, :name, {}, {class:"select-box", id:"item-category"}) %>
        <div class="weight-bold-text">
          保管場所
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:place_id, Place.all, :id, :name, {}, {class:"select-box", id:"item-place"}) %>
        <div class="weight-bold-text">
          数量
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_field :quantity, class:"items-text", id:"quantity", placeholder:"数量" %>
        <%= f.collection_select(:unit_id, Unit.all, :id, :name, {}, {class:"select-box", id:"item-sales-unit"}) %>
        <div class="weight-bold-text">
          期限
          <span class="indispensable">任意</span>
        </div>
        <%= raw sprintf(
                f.date_select(
                  :expiry_date,
                  class:'select-date',
                  id:"expiry-date",
                  use_month_numbers: true,
                  prompt:'--',
                  start_year: 2020,
                  end_year: (Time.now.year + 50),
                  date_separator: '%s'),
                "年", "月") + "日" %>
        </div>
      </div>
    </div>
    <%# /商品の詳細 %>

    <%# 価格 %>
    <div class="sell-price">
      <div>
        <div class="price-content">
          <div class="price-text">
            <span>価格</span>
            <span class="indispensable">任意</span>
          </div>
          <span class="sell-yen">¥</span>
          <%= f.text_field :price, class:"price-input", id:"item-price", placeholder:"例）300" %>
        </div>
      </div>
    </div>
    <%# /価格 %>

    <%# コード %>
    <div class="items-code">
      <div class="weight-bold-text">
        発注コード
        <span class="indispensable">任意</span>
      </div>
      <%= f.text_field :order_code, class:"items-text", id:"item-code", placeholder:"発注コード" %>
    </div>
    <%# /コード %>

    <%# 商品説明 %>
    <div class="items-explain">
      <div class="weight-bold-text">
        商品の説明
        <span class="indispensable">任意</span>
      </div>
      <%= f.text_area :comment, class:"items-text", id:"item-info", placeholder:"備考" %>
    </div>
    <%# /商品説明 %>

    <%# 下部ボタン %>
    <div class="sell-btn-contents">
      <%= f.submit "登録する" ,class:"sell-btn" %>
      <%=link_to 'もどる', root_path, class:"back-btn" %>
    </div>
    <%# /下部ボタン %>
  </div>
  <% end %>
</div>