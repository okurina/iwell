<!DOCTYPE html>
<html>
  <head>
    <title>Iwell</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <header class="header">
      <div class="header__bar row">
        <h1 class="grid-6"><a href="/">iWell</a></h1>
        <% if user_signed_in? %>
          <div class="user_nav grid-6">
            <%= link_to "新規商品登録", "#", class: "post" %>
            <%= link_to "発注リスト", "#", class: "post" %>
            <%= link_to "ユーザー管理", users_path, class: "post" %>
            <span><%= link_to "#{current_user.user_name}", class: :greeting__link%>
              <ul class="user__info">
                <li>
                  <%= link_to "マイページ", "/users/#{current_user.id}" %>
                  <%= link_to "ログアウト", destroy_user_session_path, data: { turbo_method: :delete } %>
                </li>
              </ul>
            </span>
          </div>
        <% else %>
          <div class="grid-6">
            <%= link_to "ログイン", new_user_session_path, class: "post" %>
            <%= link_to "新規登録", new_user_registration_path, class: "post" %>
          </div>
        <% end %>
      </div>
    </header>

    <%= yield %>

    <footer>
      <p>
        Copyright iWell 2023.
      </p>
    </footer>
  </body>
</html>
