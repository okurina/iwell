<% if user_signed_in? && chat.liked_by?(current_user)%>
  <%=link_to chat_likes_path(chat.id),  data: { turbo_method: :delete }, class: "chat-likes",remote: true do%>
    <%= image_tag("good.png", size: '25x25', class: "good-btn") %><%= chat.likes.count %>
  <% end %>
<% else %>
  <%=link_to chat_likes_path(chat.id), data: { turbo_method: :post }, class: "chat-likes", remote: true do%>
    <%= image_tag("good.png", size: '25x25',class: "good-btn") %>
    <div class= "good-count"><%= chat.likes.count %></div>
  <% end %>
<% end %>
