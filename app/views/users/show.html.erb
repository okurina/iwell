<div class="main">
  <div class="inner">
    <div class="user__wrapper">
      <h2 class="page-heading">
        <%= "#{@user_name}"%>さんのマイページ
      </h2>
      <table class="table">
        <tbody>
          <tr>
            <th class="table__col1">名前</th>
            <td class="table__col2"><%= "#{@user_name}" %></td>
          </tr>
          <tr>
            <th class="table__col1">所属</th>
            <td class="table__col2"><%= "#{@department}" %></td>
          </tr>
          <tr>
            <th class="table__col1">ログインID</th>
            <td class="table__col2"><%= "#{@login_num}" %></td>
          </tr>
          <tr>
            <th class="table__col1">メールアドレス</th>
            <td class="table__col2"><%= "#{@email}" %></td>
          </tr>
          <tr>
            <th class="table__col1">パスワード</th>
            <td class="table__col2"><%= "#{@password}" %></td>
          </tr>
        </tbody>
      </table>

      <% if user_signed_in? %> 
          <%= link_to "Edit", edit_user_registration_path(@user.id), method: :get, class: "user-red-btn" %>
          <%= link_to "Delete","/users/#{@user.id}", data: { turbo_method: :delete }, class:"user-destroy" %>
      <% end %>

    </div>
  </div>
</div>